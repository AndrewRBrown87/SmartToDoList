<head>
  <title>Home Page</title>
  <%- include('partials/header') %>

<body>
  <%- include('partials/nav') %>
    <div class="item_entry">
      <h3>What do you want to try next?</h3>
      <form class="form-inline" action="/items" method="POST">
        <div class="add-form">
          <input id="item-input" type="text" name="item" />
          <button id="add-button" type="submit">ADD</button>
        </div>
      </form>
    </div>
    <div class="categories">
      <div class="category-box" id="restaurants">
        <div class="category-header restaurants">Restaurants</div>
        <ul class="sortable">
          <% for (let item in items) { %>
            <% if (items[item].category_id === 2) { %>
              <li class="item">
                <form class="item-form" action="/" method="POST" data-id="<%= items[item].id %>">
                  <button><i class="fa-solid fa-square-check"></i></button>
                  <div class="item-divider">
                    <span>
                      <%= items[item].item_name %>
                    </span>
                    <div><img class="grip" src="/images/gripIcon-01.png"></div>
                  </div>
                </form>
              </li>
              <% } } %>
        </ul>
        <div class="category-footer restaurants">
          <span>more</span><i class="fa-solid fa-caret-down"></i>
        </div>
        <div class="category-footer-open restaurants hidden">
          <span>more</span><i class="fa-solid fa-caret-up"></i>
        </div>
      </div>
      <div class="category-box" id="movies">
        <div class="category-header movies">Movies</div>
        <ul class="sortable">
          <% for (let item in items) { %>
